{
  "name": "rn-template",
  "version": "1.0.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "dev:cc": "expo start --clear",
    "dev:off": "expo start --offline",
    "build:web": "expo export --platform web",
    "view": "expo serve",
    "lint": "biome check --fix src",
    "postinstall": "lefthook install",
    "update": "nu expo@latest && expo install --fix && ncu",
    "test": "jest",
    "check": "expo-doctor",
    "commit": "git add -A && git-cz"
  },
  "dependencies": {
    "expo": "^52.0.23",
    "expo-router": "~4.0.15",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.5",
    "react-native-web": "~0.19.13"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@biomejs/biome": "^1.9.4",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.3",
    "@types/react": "~18.3.18",
    "biome-extends": "^1.0.1",
    "expo-doctor": "^1.12.4",
    "git-cz": "^4.9.0",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.2",
    "knip": "^5.41.1",
    "lefthook": "^1.10.1",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "jest-expo"
  }
}
