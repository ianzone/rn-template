{
  "name": "rn-template",
  "version": "1.0.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "dev:cc": "expo start --clear",
    "dev:off": "expo start --offline",
    "build:web": "expo export --platform web",
    "view": "expo serve",
    "lint": "biome check --fix src",
    "test": "jest",
    "check": "expo-doctor",
    "prepare": "lefthook install",
    "update": "nu expo@latest && expo install --fix && ncu -u && ni",
    "commit": "git add -A && git commit --no-edit",
    "squash": "bun scripts/squash.ts && git commit --no-edit --no-verify"
  },
  "dependencies": {
    "expo": "^52.0.46",
    "expo-router": "~4.0.20",
    "react": "18.3.1",
    "react-native": "0.76.9",
    "react-native-web": "~0.19.13"
  },
  "devDependencies": {
    "@es-proj/rn": "^1.0.1",
    "@types/react": "~18.3.12",
    "git-cz": "^4.9.0",
    "knip": "^5.50.5",
    "lefthook": "^1.11.11"
  },
  "jest": {
    "preset": "jest-expo"
  }
}
